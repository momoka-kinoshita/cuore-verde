<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>
  <div>
    <%= render 'posts/posts', posts: @posts %>
  </div>
<% else %>
  <div class="bg-secondary p-3 p-sm-5 my-4 rounded">
    <div class="text-center text-white">
      <h1>Welcome to the CuoreVerde</h1>
      <%= link_to 'ユーザー登録', signup_path, class: 'btn btn-lg btn-primary' %>
      <%= link_to 'ログイン', login_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>
