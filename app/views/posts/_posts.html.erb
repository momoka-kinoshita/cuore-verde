<% if posts.any? %>
  <ul class="list-unstyled mt-2">
    <% posts.each do |post| %>
      <li class="d-flex">
          <div>
            <%= link_to post.user.name, user_path(post.user), class: "text-decoration-none" %> <span class="text-muted">posted at <%= post.created_at %></span>
          </div>
          <div>
            <video src="<%= url_for(post.video.attachment) %>" type="video/mp4" controls></video>
          </div>
          <div>
            <p><%= link_to post.id, post %></p>
            <p><%= post.maintitle %><p>
            <p><%= post.memo %></p>
          </div>
          <div>
            <% if current_user == post.user %>
              <%= link_to "削除", post, method: :delete, data: { confirm: "本当に削除しますか？" }, class: 'btn btn-danger btn-sm' %>
            <% end %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
<% end %>