<% if posts.any? %>
  <ul class="list-unstyled mt-2">
    <% posts.each do |post| %>
        <div>
          <span><%= link_to '詳細', post %></span>
          <span>【タグ】</span>
          <% post.tags.each do |tag| %>
            <%= tag.name %>
          <% end %>
          <br>
          <%= link_to post.user.name, user_path(post.user), class: "text-decoration-none" %> <span class="text-muted"><%= l post.created_at %></span>
          
        </div>
      
        <div class="mb-4">
          <video src="<%= url_for(post.video.attachment) %>" type="video/mp4", width="100%", height="100%" controls autobuffer></video>
        </div>
        
    <% end %>
  </ul>
<% end %>